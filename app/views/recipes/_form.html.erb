<%= form_for @recipe do |f| %>

  <% if @recipe.errors.any? %>
    <div>
      <%= pluralize(@recipe.errors.count, "error") %> prevented this recipe from being submitted:
      <ul>
        <% @recipe.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="box">
    <%= f.label "title" %><br>
    <%= f.text_field "title" %>
  </div>
  <div class="box">
    <%= f.label "directions" %><br>
    <%= f.text_field "directions" %>
  </div>
  <div class="box">
    <%= f.label "cook_time in minutes" %><br>
    <%= f.number_field "cook_time" %>
  </div>
  <div class="box">
    <%= f.label "Recipe Image URL" %><br>
    <%= f.text_field "poster_image_url" %>
  </div>

  <div class="box">
    <%= f.label "ingredientss" %><br>
    <% ingredients_arr = @recipe.ingredients.map { |i| i.name } %>
    <%= f.text_field(:self_summary, :value => ingredients_arr) %>
  </div>

  <div>
    <%= f.submit "Submit" %> 
  </div>
<% end %>