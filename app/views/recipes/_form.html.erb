<%= form_for @recipes do |f| %>

  <% if @recipes.errors.any? %>
    <div>
      <%= pluralize(@recipes.errors.count, "error") %> prevented this recipe from being submitted:
      <ul>
        <% @recipes.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label "title" %><br>
    <%= f.text_field "title" %>
  </div>
  <div>
    <%= f.label "directions" %><br>
    <%= f.text_field "directions" %>
  </div>
  <div>
    <%= f.label "cook_time" %><br>
    <%= f.number_field "cook_time" %>
  </div>
  <div>
    <%= f.label "poster_image_url" %><br>
    <%= f.text_field "poster_image_url" %>
  </div>
  <div>
    <%= f.label "ingredients" %><br>
    <%= f.text_area "ingredients" %>
  </div>
  <div>
    <%= f.submit "Submit" %> 
  </div>
<% end %>